<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/llMessageContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_received_background"
        android:layout_marginStart="@dimen/five"
        android:layout_marginTop="@dimen/five">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/fifteen"
            android:paddingTop="@dimen/ten"
            android:paddingEnd="@dimen/fifteen"
            android:textSize="@dimen/t_ten" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/three_hundred"
            android:paddingStart="@dimen/fifteen"
            android:paddingEnd="@dimen/fifteen"
            android:paddingBottom="@dimen/ten"
            android:layout_below="@+id/tvDate"/>

    </RelativeLayout>

</RelativeLayout>