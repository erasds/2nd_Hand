<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/five"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/four"
    app:cardCornerRadius="@dimen/eight"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/sixteen">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_twenty"
            android:textStyle="bold"
            android:layout_below="@+id/ivImage"
            android:layout_marginTop="@dimen/eight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tvName">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_weight="1"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:textSize="@dimen/t_fourteen"
                android:layout_marginTop="@dimen/four" />

            <CheckBox
                android:id="@+id/chxFav"
                android:layout_width="@dimen/twenty_four"
                android:layout_height="@dimen/twenty_four"
                android:button="@drawable/custom_checkbox_selector" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>